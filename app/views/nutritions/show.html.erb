<!-- app/views/nutritions/show.html.erb -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">栄養バランス</h1>

  <!-- 期間選択ボタン -->
  <div class="flex gap-4 mb-6">
    <button class="<%= @period == 'daily' ? 'bg-blue-500' : 'bg-gray-300' %> px-4 py-2 rounded text-white" data-action="click->nutrition-chart#updatePeriod" data-period="daily">
      日単位
    </button>
    <button class="<%= @period == 'weekly' ? 'bg-blue-500' : 'bg-gray-300' %> px-4 py-2 rounded text-white" data-action="click->nutrition-chart#updatePeriod" data-period="weekly">
      週単位
    </button>
    <button class="<%= @period == 'monthly' ? 'bg-blue-500' : 'bg-gray-300' %> px-4 py-2 rounded text-white" data-action="click->nutrition-chart#updatePeriod" data-period="monthly">
      月単位
    </button>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-6">
    <div class="w-[400px] h-[400px] mx-auto">
      <canvas data-controller="nutrition-chart"></canvas>
    </div>
  </div>
</div>
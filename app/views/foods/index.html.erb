<div class="foods-page">
  <h1 class="text-xl font-bold mb-4">献立管理ページ</h1>

  <div class="flex justify-between items-start">
    <!-- 左側：献立の画像や情報 -->
    <div class="w-2/5 p-4 bg-gray-100 rounded-lg shadow-md">
      <h2 class="text-lg font-semibold">今日の献立</h2>
      <div class="menu-info">
        <p>献立画像</p>
      </div>
    </div>

    <!-- 右側：カレンダー部分 -->
    <div class="w-3/5 p-4 bg-white border border-gray-300 rounded-lg shadow-md">
      <div id="calendar" style="width: 100%; height: 500px;"> <!-- 高さと幅を調整 -->
      </div>
      <%= link_to '献立を作成', new_recipe_path, class: 'btn btn-primary mt-4 text-right' %>
    </div>
  </div>
</div>

<% content_for :additional_js do %>
  <%= javascript_include_tag 'calendar', defer: true %>
<% end %>
<div class="space-y-3">
  <%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", new_session_path(resource_name),
        class: "block text-indigo-600 hover:text-indigo-500 transition-colors duration-150" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規登録", new_registration_path(resource_name),
        class: "block text-indigo-600 hover:text-indigo-500 transition-colors duration-150" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた場合", new_password_path(resource_name),
        class: "block text-indigo-600 hover:text-indigo-500 transition-colors duration-150" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <%= button_to omniauth_authorize_path(resource_name, provider),
          class: "w-full mt-3 px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200",
          data: { turbo: false } do %>
  <div class="flex items-center justify-center">
    <% if provider.to_s == "google_oauth2" %>
    Googleでログイン
    <% else %>
    <%= "#{OmniAuth::Utils.camelize(provider)}でログイン" %>
    <% end %>
  </div>
  <% end %>
  <% end %>
  <% end %>
</div>
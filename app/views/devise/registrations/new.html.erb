<!-- app\views\devise\registrations\new.html.erb -->
<div class="bg-gray-800">
  <div class="p-8 lg:w-1/2 mx-auto">
    <!-- メインフォーム -->
    <div class="bg-gray-100 rounded-t-lg rounded-b-lg py-12 px-4 lg:px-24">
      <p class="text-center text-sm text-gray-500 font-light">Sign up with credentials</p>

      <!-- form_withを使ったフォーム -->
      <%= form_with model: @user, url: user_registration_path, method: :post, local: true, autocomplete: "off", class: "mt-6" do |f| %>
      <!-- アカウント名 -->
      <div class="relative">
        <%= f.text_field :name, placeholder: "アカウント名", id: "user_name", class: "appearance-none border pl-12 border-gray-100 shadow-sm focus:shadow-md transition rounded-md w-full py-3 text-gray-600 leading-tight focus:outline-none focus:ring-gray-600 focus:shadow-outline", autocomplete: "off" %>
        <div class="absolute left-0 inset-y-0 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 ml-3 text-gray-400 p-1" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 2a5 5 0 00-5 5v2a2 2 0 00-2 2v5a2 2 0 002 2h10a2 2 0 002-2v-5a2 2 0 00-2-2H7V7a3 3 0 015.905-.75 1 1 0 001.937-.5A5.002 5.002 0 0010 2z" />
          </svg>
        </div>
      </div>

      <div class="relative mt-3">
        <%= f.text_field :nickname, placeholder: "ニックネーム（表示名）", class: "appearance-none border pl-12 border-gray-100 shadow-sm focus:shadow-md transition rounded-md w-full py-3 text-gray-600 leading-tight focus:outline-none focus:ring-gray-600 focus:shadow-outline" %>
        <div class="absolute left-0 inset-y-0 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 ml-3 text-gray-400 p-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>


      <!-- メールアドレス -->
      <div class="relative mt-3">
        <%= f.email_field :email, placeholder: "メールアドレス", id: "user_email", class: "appearance-none border pl-12 border-gray-100 shadow-sm focus:shadow-md transition rounded-md w-full py-3 text-gray-600 leading-tight focus:outline-none focus:ring-gray-600 focus:shadow-outline" %>
        <div class="absolute left-0 inset-y-0 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 ml-3 text-gray-400 p-1" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
          </svg>
        </div>
      </div>

      <!-- パスワード -->
      <div class="relative mt-3">
        <%= f.password_field :password, placeholder: "パスワード", id: "user_password", class: "appearance-none border pl-12 border-gray-100 shadow-sm focus:shadow-md transition rounded-md w-full py-3 text-gray-600 leading-tight focus:outline-none focus:ring-gray-600 focus:shadow-outline" %>
        <div class="absolute left-0 inset-y-0 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 ml-3 text-gray-400 p-1" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 2a5 5 0 00-5 5v2a2 2 0 00-2 2v5a2 2 0 002 2h10a2 2 0 002-2v-5a2 2 0 00-2-2H7V7a3 3 0 015.905-.75 1 1 0 001.937-.5A5.002 5.002 0 0010 2z" />
          </svg>
        </div>
      </div>

      <!-- パスワード確認 -->
      <div class="relative mt-3">
        <%= f.password_field :password_confirmation, placeholder: "パスワード確認", id: "user_password_confirmation", class: "appearance-none border pl-12 border-gray-100 shadow-sm focus:shadow-md transition rounded-md w-full py-3 text-gray-600 leading-tight focus:outline-none focus:ring-gray-600 focus:shadow-outline" %>
        <div class="absolute left-0 inset-y-0 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 ml-3 text-gray-400 p-1" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 2a5 5 0 00-5 5v2a2 2 0 00-2 2v5a2 2 0 002 2h10a2 2 0 002-2v-5a2 2 0 00-2-2H7V7a3 3 0 015.905-.75 1 1 0 001.937-.5A5.002 5.002 0 0010 2z" />
          </svg>
        </div>
      </div>

      <div class="relative mt-3">
        <%= f.label :avatar, "プロフィール画像", class: "block text-sm text-gray-600 mb-2" %>
        <%= f.file_field :avatar, class: "appearance-none border pl-12 border-gray-100 shadow-sm focus:shadow-md transition rounded-md w-full py-3 text-gray-600 leading-tight focus:outline-none focus:ring-gray-600 focus:shadow-outline" %>
        <div class="absolute left-0 inset-y-0 flex items-center pt-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 ml-3 text-gray-400 p-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>

      <!-- パスワードの強さ表示 -->
      <p class="mt-4 italic text-gray-500 font-light text-xs">Password strength: <span class="font-bold text-green-400">strong</span></p>

      <!-- 規約同意チェックボックス -->
      <div class="mt-4 flex items-center text-gray-500">
        <label class="text-sm" for="remember">I agree with the <a class="text-indigo-400 hover:text-indigo-500">Privacy Policy</a></label>
      </div>

      <!-- 登録ボタン -->
      <div class="flex items-center justify-center mt-8">
        <%= f.submit "Create Account", class: "text-white py-2 px-4 uppercase rounded bg-indigo-500 hover:bg-indigo-600 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5" %>
      </div>
      <% end %>

      <!-- Google 認証ボタン -->
      <div class="bg-white rounded-b-lg p-8 mt-6">
        <p class="text-center text-xl text-gray-400 font-light">Or sign up with</p>
        <div class="flex items-center justify-center space-x-4 mt-3">
          <%= button_to user_google_oauth2_omniauth_authorize_path,
          data: { turbo: false },
          method: :post,
          class: "flex items-center py-2 px-4 text-lg uppercase rounded bg-white hover:bg-gray-100 text-indigo-500 border border-transparent shadow-md font-medium transition transform hover:-translate-y-0.5" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-3" viewBox="0 0 48 48">
            <path fill="#fbc02d" d="M43.611 20.083H42V20H24v8h11.303c-1.649 4.657-6.08 8-11.303 8-6.627 0-12-5.373-12-12s5.373-12 12-12c3.059 0 5.842 1.154 7.961 3.039l5.657-5.657C34.046 6.053 29.268 4 24 4 12.955 4 4 12.955 4 24s8.955 20 20 20 20-8.955 20-20c0-1.341-.138-2.65-.389-3.917z" />
            <path fill="#e53935" d="m6.306 14.691 6.571 4.819C14.655 15.108 18.961 12 24 12c3.059 0 5.842 1.154 7.961 3.039l5.657-5.657C34.046 6.053 29.268 4 24 4 16.318 4 9.656 8.337 6.306 14.691z" />
            <path fill="#4caf50" d="M24 44c5.166 0 9.86-1.977 13.409-5.192l-6.19-5.238A11.91 11.91 0 0 1 24 36c-5.202 0-9.619-3.317-11.283-7.946l-6.522 5.025C9.505 39.556 16.227 44 24 44z" />
            <path fill="#1565c0" d="M43.611 20.083 43.595 20H24v8h11.303a12.04 12.04 0 0 1-4.087 5.571l.003-.002 6.19 5.238C36.971 39.205 44 34 44 24c0-1.341-.138-2.65-.389-3.917z" />
          </svg>
          Google
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- app/views/recipes/show.html.erb -->
<h1 class="text-3xl font-bold text-center mb-6">生成された献立</h1>

<% if @meal_plans.present? %>
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
  <% @meal_plans.each_with_index do |plan, index| %>
  <div class="bg-white rounded-lg shadow-md p-6">
    <!-- 献立タイトル -->
    <h2 class="text-2xl font-semibold mb-4"><%= plan[:name] || "タイトル未設定" %></h2>

    <!-- 食材リスト -->
    <h3 class="text-xl font-semibold mb-2">食材</h3>
    <ul>
      <% plan[:ingredients].each do |ingredient| %>
      <li><%= ingredient %></li>
      <% end %>
    </ul>

    <!-- 栄養情報 -->
    <h3 class="text-xl font-semibold mb-2">栄養判定</h3>
    <% categorized = @categorized_nutrients[index] %>
    <ul class="list-disc list-inside mb-6 text-gray-700">
      <li>ミネラル: <%= categorized[:minerals] || "データなし" %></li>
      <li>カロリー: <%= categorized[:calories] || "データなし" %></li>
      <li>タンパク質: <%= categorized[:protein] || "データなし" %></li>
      <li>脂質: <%= categorized[:fat] || "データなし" %></li>
      <li>炭水化物: <%= categorized[:carbohydrates] || "データなし" %></li>
    </ul>
  </div>
  <% end %>
</div>
<% else %>
<p>献立が取得できませんでした。</p>
<% end %>
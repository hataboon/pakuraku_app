<!-- app/views/recipes/_form.html.erb -->
<!-- 栄養素選択 -->
<div class="mb-6">
  <p class="text-lg font-semibold mb-2">栄養素を選択 (最大5つ)</p>
  <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
    <% ["ミネラル", "たんぱく質", "炭水化物", "ビタミン", "脂質"].each do |nutrient| %>
    <div class="form-check flex items-center">
      <%= check_box_tag "nutrients[]", nutrient, false, id: "nutrient_#{nutrient}", class: "form-check-input w-6 h-6" %>
      <%= label_tag "nutrient_#{nutrient}", nutrient, class: "ml-2 text-lg" %>
    </div>
    <% end %>
  </div>
</div>

<!-- 送信ボタン -->
<div class="text-center">
  <%= submit_tag '献立作成', class: 'btn btn-primary text-lg px-6 py-3 rounded bg-blue-500 text-white hover:bg-blue-700 transition duration-200' %>
</div>
    </nav>
  </div>

  <table class="table-fixed w-full border-collapse">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
        <th class="p-2 bg-gray-200 text-center font-semibold text-gray-700">
          <%= t('date.abbr_day_names')[day.wday] %>
        </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% date_range.each_slice(7) do |week| %>
      <tr>
        <% week.each do |day| %>
        <% if day.month == start_date.month %>
        <td class="p-4 border border-gray-300 align-top bg-white hover:bg-gray-50">
          <div class="text-center font-bold text-lg mb-2 <%= day == Date.today ? 'text-blue-500' : '' %>">
            <%= day.day %>
          </div>

          <% plans_for_day = @calendar_plans&.select { |plan| plan.date == day } || [] %>
          <% { "Êúù" => "morning", "Êòº" => "afternoon", "Â§ú" => "evening" }.each do |label, meal_time| %>
          <% plan = plans_for_day.find { |p| p.meal_time == meal_time } %>

          <div class="mb-2 p-2 bg-gray-50 rounded border border-gray-200">
            <label class="flex items-center">
              <%= check_box_tag "selected_dates[#{day.strftime('%Y-%m-%d')}][]", meal_time, false, class: "mr-2" %>
              <span><%= label %></span>
            </label>

            <% if plan&.recipe&.name.present? %>
            <% names = plan.recipe.name.split(",") %>
            <div class="mt-2 text-sm">
              <% if names[0].present? %>
              <p><span class="text-blue-500 font-bold">‰∏ªÈ£ü:</span> <%= names[0].strip %></p>
              <% end %>
              <% if names[1].present? %>
              <p><span class="text-green-500 font-bold">‰∏ªËèú:</span> <%= names[1].strip %></p>
              <% end %>
              <% if names[2].present? %>
              <p><span class="text-yellow-500 font-bold">ÂâØËèú:</span> <%= names[2].strip %></p>
              <% end %>
            </div>
            <% end %>
            <!-- „Ç¥„ÉüÁÆ±„Éû„Éº„ÇØ„ÅÆËøΩÂä† -->
            <% if plan && plan.user_id == current_user.id %>
            <div class="mt-2 text-right">
              <%= link_to 'üóë', calendar_plan_path(plan.id), method: :delete, data: { confirm: "Êú¨ÂΩì„Å´ÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü" }, class: "text-red-500 hover:text-red-700" %>
            </div>
            <% end %>
          </div>
          <% end %>
        </td>
        <% else %>
        <td class="p-4 border border-gray-300 bg-gray-100"></td>
        <% end %>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
